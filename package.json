{
  "name": "alfacars",
  "version": "1.0.0",
  "description": "online store selling auto parts",
  "main": "app.js",
  "scripts": {
    "start": "cross-env NODE_ENV=production node app.js",
    "server": "nodemon app.js",
    "client": "npm run serve --prefix client",
    "admin": "npm run serve --prefix admin",
    "client:install": "npm install --prefix client",
    "client:build": "npm run build --prefix client",
    "admin:install": "npm install --prefix admin",
    "admin:build": "npm run build --prefix admin",
    "dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run client\" \"npm run admin\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SaenkoVova/AlfaCars.git"
  },
  "keywords": [
    "js",
    "Node",
    "Js",
    "Vue",
    "Mongo",
    "DB",
    "Express"
  ],
  "author": "Saenko V",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/SaenkoVova/AlfaCars/issues"
  },
  "homepage": "https://github.com/SaenkoVova/AlfaCars#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "body-parser": "^1.19.0",
    "config": "^3.3.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "express-validator": "^6.5.0",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^5.9.15",
    "redis": "^3.0.2",
    "socket.io": "^2.3.0",
    "socket.io-client": "^2.3.0"
  },
  "devDependencies": {
    "concurrently": "^5.2.0",
    "cross-env": "^7.0.2",
    "nodemon": "^2.0.4"
  }
}
